<div class="event_form">

	<%= form_for(@event, url: events_path(@event), method: :post ) do |f| %>

		<div class="field  text-center">
          <%= f.label :name,'イベント名', class: "event_label" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field  text-center">
          <%= f.label :description,'概要または連絡事項', class: "event_label" %><br />
          <%= f.text_area :description, autofocus: true, autocomplete: "description" %>
        </div>

        <div class="field text-center">
          <%= f.label :start_at,'イベント開始日', class: "event_label" %><br />
         <%= f.date_select :start_at, {}%>
        </div>

        <div class="field text-center">
          <%= f.label :end_at,'イベント終了日', class: "event_label" %><br />
         <%= f.date_select :end_at, {}%>
        </div>

		  <div class="actions text-center">
	      <%= f.submit "作成する" ,class: "btn btn-info "%>
	    </div>

      <% if @event.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

	<% end %>

</div>
