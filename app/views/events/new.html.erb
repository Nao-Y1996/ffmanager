<div class="event_form">
	<%= form_for(@event, url: events_path(@event), method: :post ) do |f| %>
		<div class="field  text-center">
        <%= f.label :name,'イベント名' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field  text-center">
        <%= f.label :description,'概要または連絡事項' %><br />
        <%= f.text_area :description, autofocus: true, autocomplete: "description" %>
      </div>

      <div class="field text-center">
        <%= f.label :start_at,'イベント開始日' %><br />
       <%= f.date_select :start_at, {}%>
      </div>

      <div class="field text-center">
        <%= f.label :end_at,'イベント終了日' %><br />
       <%= f.date_select :end_at, {}%>
      </div>

      <div class="mt-3">
          <div class="field mt-2">
            <%= f.label :url1,'リンク1', class: "url_description"%>
            <br><span class="URL-comment"> 参加者に表示したいリンクがあればここに入れます（Googleフォームなど）</span><br>
            <%= f.url_field :url1, autofocus: true, autocomplete: "url1"%>
            <%= f.label :url1_description,'リンク1の表示' , class: "url_description"%><br>
            <%= f.text_field :url1_description, autofocus: true, autocomplete: "description", id: "url_description_field" %><br>
          </div>
          <div class="field mt-2">
            <%= f.label :url2,'リンク2', class: "url_description"%><br>
            <%= f.url_field :url2, autofocus: true, autocomplete: "url2"%>
            <%= f.label :url2_description,'リンク2の表示' , class: "url_description"%><br>
            <%= f.text_field :url2_description, autofocus: true, autocomplete: "description", id: "url_description_field" %><br>
          </div>
          <div class="field mt-2">
            <%= f.label :url3,'リンク3', class: "url url_description"%><br>
            <%= f.url_field :url3, autofocus: true, autocomplete: "url3" %>
            <%= f.label :url3_description,'リンク3の表示' , class: "url_description"%><br>
            <%= f.text_field :url3_description, autofocus: true, autocomplete: "description", id: "url_description_field" %><br>
          </div>
      </div>

		  <div class="actions text-center">
	      <%= f.submit "作成する" ,class: "btn btn-outline-info "%>
	    </div>

      <% if @event.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

	<% end %>

</div>