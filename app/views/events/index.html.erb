<h3>イベント一覧</h3>
<% if flash[:notice]%>
	<div class="alert alert-info">
      <%= flash[:notice] %>
    </div>
<% end %>
<% if flash[:warning_notice]%>
	<div class="alert alert-warning">
      <%= flash[:warning_notice] %>
    </div>
<% end %>
<% if flash[:danger_notice]%>
	<div class="alert alert-danger">
      <%= flash[:danger_notice] %>
    </div>
<% end %>
<div class="container">
	<div class='row'>

		<table class="table">
			<thead>
				<tr>
					<th>日程</th>
					<th>イベント名</th>
					<th>人数</th>
				</tr>
			</thead>
			<tbody>
				<% @active_event.each do |event| %>
					<tr>
						<td class="none_wrap">
							<% if event.start_at == event.end_at%>
								<%= event.start_at.strftime("%m/%d") %>
							<% else %>
								<%= event.start_at.strftime("%m/%d") %></br>
								<%= event.end_at.strftime("~%d") %>
							<% end %>
						</td>
						<td><%=link_to event.name, event_path(event) %></td>
						<td><%= event.users.count %></td>
					</tr>
				<% end %>
			</tbody>
		</table>


		<details style="margin-top:1rem;">
		<summary>過去のイベント：<%=@past_event.count %>件</summary>
		<table class="table">
			<thead>
				<tr>
					<th>日程</th>
					<th>イベント名</th>
					<th>人数</th>
				</tr>
			</thead>
			<tbody>
				<% @past_event.reverse_each do |event| %>
					<tr>
						<td class="none_wrap">
							<% if event.start_at == event.end_at%>
								<%= event.start_at.strftime("%m/%d") %>
							<% else %>
								<%= event.start_at.strftime("%m/%d") %></br>
								<%= event.end_at.strftime("~%d") %>
							<% end %>
						</td>
						<td><%=link_to event.name, event_path(event) %></td>
						<td><%= event.users.count %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
		</details>

	</div>
</div>