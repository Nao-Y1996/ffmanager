<div class="event_form">
	<%= form_for(@event) do |f| %>

		<div class="field  text-center">
        <%= f.label :name,'イベント名' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="field  text-center">
        <%= f.label :description,'概要または連絡事項' %><br />
        <%= f.text_area :description, autofocus: true, autocomplete: "description" %>
      </div>

      <div class="field text-center">
        <%= f.label :start_at,'イベント開始日' %><br />
       <%= f.date_select :start_at, {}%>
      </div>

      <div class="field text-center">
        <%= f.label :end_at,'イベント終了日' %><br />
       <%= f.date_select :end_at, {}%>
      </div>

      <div class="mt-3">
          <div class="field mt-2">
            <%= f.label :url1,'リンク1', class: "url_description"%><br>
            <%= f.url_field :url1, autofocus: true, autocomplete: "url1"%><br>
            <%= f.label :url1_description,'リンク1の表示' , class: "url_description"%><br>
            <%= f.text_field :url1_description, autofocus: true, autocomplete: "description", id: "url_description_field" %><br>
          </div>
          <div class="field mt-2">
            <%= f.label :url2,'リンク2', class: "url_description"%><br>
            <%= f.url_field :url2, autofocus: true, autocomplete: "url2"%><br>
            <%= f.label :url2_description,'リンク2の表示' , class: "url_description"%><br>
            <%= f.text_field :url2_description, autofocus: true, autocomplete: "description", id: "url_description_field" %><br>
          </div>
          <div class="field mt-2">
            <%= f.label :url3,'リンク3', class: "url url_description"%><br>
            <%= f.url_field :url3, autofocus: true, autocomplete: "url3" %><br>
            <%= f.label :url3_description,'リンク3の表示' , class: "url_description"%><br>
            <%= f.text_field :url3_description, autofocus: true, autocomplete: "description", id: "url_description_field" %><br>
          </div>
      </div>

      <div class="actions text-center">
        <%= f.submit "保存" ,class: "btn btn-outline-info "%>
      </div>

      <% if @event.errors.any? %>
        <div id="error_explanation">
          <ul>
          <% @event.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
	<% end %>
</div>
<!-- フラッシュメッセージの表示 -->
<% if flash[:event_participation_error]%>
  <div class="alert alert-danger">
      <%= flash[:event_participation_error] %>
    </div>
<% end %>



  <!-- 管理者一覧 -->
<div class="mt-3">イベント管理者
<% if current_user.joined_event(@event) %>
　　<%=link_to '編集', edit_evemt_admins_path(@event),class: "" %>
<% end %>
</div>
  <table class="table table-sm" >
    <thead>
      <tr>
        <th>代</th>
        <th>名前</th>
      </tr>
    </thead>
    <tbody>
      <% @admin_participations.each do |admin_participation| %>
        <tr>
          <td class="none_wrap"><%= admin_participation.user.term %></td>
          <td><%=link_to admin_participation.user.name, user_path(admin_participation.user),class: "user_name" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>