<h3>登録情報の編集</h3>


<%= form_for(@user) do |f| %>
  <div class='user_edit'>

    <div class="field user_form">
      <div class='user_form_label'><%= f.label :student_number, "学修番号" %></div>
      	<%= f.text_field :student_number, autofocus: true, autocomplete: "student_number" %>
    </div>

    <div class="field user_form">
      <div class='user_form_label'><%= f.label :name,"名前" %></div>
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field user_form">
      <div class='user_form_label'><%= f.label :name_kana, "名前（カナ）" %></div>
      <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
    </div>

    <div class="field user_form">
      <div class='user_form_label'><%= f.label :term,"期" %></div>
      <%= f.text_field :term, autofocus: true, autocomplete: "term" %>
    </div>


    <div class="field user_form">
      <div class='user_form_label'><%= f.label :email, "メールアドレス" %></div>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions user_form">
      <%= f.submit "変更する" ,class: "m-2"%>
    </div>

</div>
<% end %>